@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-4 mx-auto">
			<div class="card">
				<div class="card-body">
					<h2>@ViewData["Title"]</h2>
					<p>Your password has been reset.</p>
					<a asp-action="Login" class="btn btn-primary">Log In</a>
				</div>
			</div>
		</div>
	</div>
</div>
