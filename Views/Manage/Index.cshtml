@model IndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}


@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="container-fluid">
	<div class="row">
		<div class="col-md-4 mx-auto">
			<div class="card">
				<div class="card-body">
					<h2>@ViewData["Title"]</h2>
			        <form method="post">
			            <div asp-validation-summary="All" class="text-danger"></div>
			            <div class="form-group">
			                <input asp-for="Username" placeholder="Username..." class="form-control" disabled />
			            </div>
			            <div class="form-group">
			                <label asp-for="Email"></label>
			                @if (Model.IsEmailConfirmed)
			                {
			                    <input asp-for="Email" class="form-control" placeholder="Email..." />
			                }
			                else
			                {
			                    <input asp-for="Email" placeholder="Email..." class="form-control mb-3" />
			                    <button asp-action="SendVerificationEmail" class="btn btn-secondary">Send verification email</button>
			                }
			                <span asp-validation-for="Email" class="text-danger"></span>
			            </div>
			            <div class="form-group">
			                <input asp-for="PhoneNumber" placeholder="Phone Number..." class="form-control" />
			                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
			            </div>
			            <button type="submit" class="btn btn-primary">Save</button>
			        </form>
				</div>
			</div>
		</div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
