@using Microsoft.AspNetCore.Identity
@using admixArk.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


	<ul class="navbar-nav mx-auto">
		<li class="nav-item"><a class="nav-link" href="/marketing"><i class="os-icon os-icon-newspaper"></i> Marketing</a></li>
		<li class="nav-item"><a class="nav-link" href="/dashboard"><i class="os-icon os-icon-window-content"></i> Dashboard</a></li>
		<li class="nav-item dropdown">
			<a class="nav-link dropdown-toggle" href="#" id="navbarApplications" data-toggle="dropdown"><i class="os-icon os-icon-delivery-box-2"></i> Applications</a>
			<div class="dropdown-menu" aria-labelledby="navbarApplications">
				<a class="dropdown-item" href="/pricing"><i class="os-icon os-icon-coins-4"></i> Pricing</a>
				<a class="dropdown-item" href="/charts"><i class="os-icon os-icon-hierarchy-structure-2"></i> Charts</a>
				<a class="dropdown-item" href="/tables"><i class="os-icon os-icon-grid-squares"></i> Tables</a>
			</div>
		</li>
		<li class="nav-item"><a class="nav-link" href="/ui-kit"><i class="os-icon os-icon-pencil-12"></i> UI Kit</a></li>
		@if (SignInManager.IsSignedIn(User))
		{
		<li class="nav-item dropdown">
			<a class="nav-link" href="#" id="navbarApplications" data-toggle="dropdown"><i class="os-icon os-icon-user-male-circle2"></i> My Account</a>
			<div class="dropdown-menu" aria-labelledby="navbarApplications">
				<a class="dropdown-item" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"><i class="os-icon os-icon-user-male-circle2"></i> @UserManager.GetUserName(User)</a>
				<a class="dropdown-item" href="javascript:void(0)"><i class="os-icon os-icon-coins-4"></i> Billing Details</a>
				<a class="dropdown-item" href="javascript:void(0)"><i class="os-icon os-icon-others-43"></i> Notifications</a>
				<a class="dropdown-item" href="#" onclick="document.getElementById('logoutForm').submit();"><i class="os-icon os-icon-signs-11"></i> Log Out</a>
			</div>
		</li>
		}
    </ul>

@if (SignInManager.IsSignedIn(User))
{
	<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
		<a href="/pricing" class="btn btn-primary ml-2">Upgrade</a>
    </form>
}
else
{
    <div class="form-inline">
		<a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-light">Log In</a>
	    <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-primary ml-2">Sign Up</a>
	</div>
}
    

